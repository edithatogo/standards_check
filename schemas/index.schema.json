{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/index.schema.json",
  "title": "Checklist Index",
  "type": "object",
  "required": ["version", "updated", "items"],
  "properties": {
    "version": { "type": ["string","number"] },
    "updated": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id", "title", "url", "version", "date", "license",
          "publisher", "preferred_format", "level", "group"
        ],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$" },
          "title": { "type": "string" },
          "url": { "type": "string" },
          "version": { "type": ["string","number"] },
          "date": { "type": ["string","null"] },
          "license": { "type": "string" },
          "publisher": { "type": "string" },
          "preferred_format": { "type": "string", "enum": ["pdf","html","docx","csv"] },
          "level": { "type": "string", "enum": ["archetype","variant"] },
          "group": { "type": "string" },
          "variant_of": { "type": "string" },
          "status": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

